<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferFriendFragment"
    android:background="#B2F2F1F1"
    android:id="@+id/referFriendFragment"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="30dp"
            android:text="Refer a Friend"
            android:textSize="25sp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refer a Friend and Get"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:textSize="25sp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 9000"
        android:textStyle="bold"
        android:layout_marginStart="290dp"
        android:layout_marginTop="120dp"
        android:textSize="25sp"
        />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refer"
        android:layout_marginTop="200dp"
        android:layout_marginStart="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your invite link"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="550dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://oladoc.app/FFYsaaFxv2kFosG7"
            android:textSize="16sp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="30dp"
            />


    </RelativeLayout>


    <TextView
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="90dp"
        android:textColor="@color/gray_light"
        android:textAlignment="center"
        android:text="Share your referral link with friends and family and get Rs 300 on each successful referral" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="700dp"
        android:background="#111D64"
        android:text="Invite Friends"
        />

    <TextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="780dp"
        android:text="-- Referral reward will be given when your friend and family book an appointment and consult with doctor"
        android:textColor="@color/gray_light"

        />

    <TextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="815dp"
        android:text="-- Fair usage policy applies"
        android:textColor="@color/gray_light"
        />
    <TextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="835dp"
        android:text="-- Other Terms and conditions applies"
        android:textColor="@color/gray_light"
        />

</FrameLayout>